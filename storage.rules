rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Legacy text: straight under users/{uid}
    match /users/{uid}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.contentType.matches('image/.*')
                   && fileName.matches('profile(_[0-9]+)?\\.jpg');
    }
    
    // New structure: users/{uid}/profile_images/
    match /users/{uid}/profile_images/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.contentType.matches('image/.*')
                   && fileName.matches('profile(_[0-9]+)?\\.jpg');
    }

    // New structure: users/{uid}/college-id/
    match /users/{uid}/college-id/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid && request.resource.contentType.matches('image/.*');
    }
    match /chat-audio/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /payments/{uid}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}